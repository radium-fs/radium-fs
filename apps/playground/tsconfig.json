{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@radium-fs/core": ["../../packages/core/src/index.ts"],
      "@radium-fs/memory": ["../../packages/memory/src/index.ts"]
    }
  },
  "include": ["src"]
}
